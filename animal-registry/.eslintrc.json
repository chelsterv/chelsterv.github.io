{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-case-declarations": 0,
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "indent": ["error", 2, { "SwitchCase": 1 }]
  }
}
